
<!--[form:assay_queue]-->
<div class="row">
  <div class="form-element">
    <label for="assay_queue_name">
      <%=l(:label_name)%>
    </label>
    <%= text_field 'assay_queue', 'name' , {:size => 40,:class=>"text-input"} %>
  </div>
</div>

<div class="row">
  <div class="form-element">
    <label for="assay_queue_description">
      <%=l(:label_description)%>
    </label>
    <%= text_area('assay_queue', 'description',{:rows=>5, :cols=>80} ) %>
  </div>
</div>

<div class="row">
  <div class="form-element">
    <label for="assay_parameter_id">
      <%=l(:label_accepts_items)%>
    </label>
    <%= collection_select(:assay_queue, :assay_parameter_id,
        @assay.parameters_for_data_type(5), :id, :name) %>
  </div>

  <div class="form-element">
    <label for="assay_queue_assigned_to">
      <%=l(:label_managed_by)%>
    </label>
    <%= select_named 'assay_queue', 'assigned_to_user_id', User  %>
  </div>

  <div class="form-element">
    <label for="assay_protocol_stage_id" >
      <%=l(:label_stage)%>
    </label>
    <%= collection_select('assay_queue', 'assay_stage_id', @assay.stages, :id, :name) %>
  </div>
</div>
<br />
 <div class="row">
  <div class="form-element">
      <%= submit_tag "Save" %>
  </div>
 </div>
 <%= link_to l(:label_cancel), queue_url( :action => 'list', :id=>@assay  ) %>

<br />
