  <!--[form:assay_protocol]-->

<%= hidden_field 'assay_protocol', 'id'  %>
<%= hidden_field('assay_protocol','assay_id')%>
<%= hidden_field('assay_protocol','current_process_id')%>
<%= hidden_field 'process_flow', 'assay_protocol_id' %>
<%= hidden_field 'process_flow', 'version'  %>

<%unless !@process_flow or @process_flow.new_record?%>
<div class="x-form-item">
    <label class="x-form-item-label" for="'process_step_start_offset_hours">
      <%=l(:label_label)%>
    </label>
    <div class="x-form-element">
      <%= text_field 'process_flow', 'name' %>
    </div>
</div>

<div class="x-form-item">
    <label class="x-form-item-label" for="'process_step_start_offset_hours">
      <%=l(:label_expected_hours)%>
    </label>
    <div class="x-form-element">
      <%= text_field 'process_flow', 'expected_hours' %>
    </div>
</div>

<div class="x-form-item">
    <label class="x-form-item-label" for=process_step_description">
      <%=l(:label_description)%>
    </label>
    <div class="x-form-element" >
       <%= text_area( 'process_flow', 'description',{:rows=>5, :cols=>80})  %>
    </div>
</div>

<%else%>
<div class="x-form-item">
  <label class="x-form-item-label" for="assay_protocol_name">
    <%=l(:label_name)%>
  </label>
  <div class="x-form-element" >
    <%= text_field( 'assay_protocol', 'name')  %>
  </div>
</div>

<div class="x-form-item">
  <label class="x-form-item-label" for="assay_protocol_description">
    <%=l(:label_description)%>
  </label>
  <div class="x-form-element" >
    <%= text_area( 'assay_protocol', 'description',{:rows=>5, :cols=>80}	)  %>
  </div>
</div>
<%end%>
