<h2> Searching for [<%=@search_text%>]</h2>
<ol class="hitlist">
    <% for hit in @hitlist%>
        <li>
        <strong>
        <%= hit.class.to_s %> 
        </strong>
        <%= link_to_object(hit) %>
        [ <%=number_round(100*hit.ferret_score,3)%> %  ]
        <p>
          <% if hit.respond_to?(:icon) %>
          <%= image_tag(hit.icon) %>
          <% end %>
          <% if hit.is_a? ProjectElement %>
          <%=link_to hit.project.name,project_url(:action=>'show',:id=> hit.project_id) %>: 
          <%=link_to hit.path,folder_url(:action=>'show',:id=> hit.parent_id) %>  
          </p><p>               
          <% end %>          
          <% if hit.respond_to?(:summary) %>
          <%=hit.summary %>       
          </p><p>               
          <% end %>
          <% if hit.respond_to?(:description) %>
          <%=highlight(excerpt(hit.description, @search_text, radius = 400),@search_text)  %>
          <% end %>
        </p>
        </li>
    <% end %>
</ol> 
