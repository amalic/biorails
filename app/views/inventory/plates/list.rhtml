<% content_for :sidemenu do%>
  <%= render :partial => '/menu/admin_menu'%>
  <div>
	<span class='menu'>Plate</span>
	<%= link_to 'List',    plate_url(:action => 'list') %>
	<%= link_to 'New',    plate_url(:action => 'new') %> 
  </div>
<% end %>

<h1>Listing Plates</h1>
<table class="report">
  <tr>
    <th>name</th>
    <th>Description</th>
    <th>Action</th>
  </tr>
  
<% for plate in @plates %>
  <tr>
    <td><%= link_to plate.name,plate_url( :action => 'show', :id => plate) %></td>
    <td><%=h plate.description%></td>
    <td><%= link_to 'edit',plate_url( :action => 'edit', :id => plate) %></td>
  </tr>
<% end %>
</table>

<div class='panel'>
<%= link_to 'New', plate_url(:action => 'new')%>
  <%= will_paginate @plates %>	
</div>