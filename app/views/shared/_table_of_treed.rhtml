<!-- 
   General table of Named Items display
   
   :items  as a Array of Named records
   :edit  Action for editing
   :show  Action for showing
   :create Action for creation
-->
 <%if items.first %>
 <% clazz = items.first.class %>
 <thead class="tableHeader">  
  <tr>
    <th>Parent </th>
  <% for column in clazz.content_columns %>
    <th><%= column.human_name %></th>
  <% end %>
    <th>Actions </th>
  </tr>
</thead>  
    
<tbody class="tableBody">
<% for row in items %>
  <tr>
     <td> <%= row.parent.path  if row.parent %>
  <% for column in clazz.content_columns %>
    <td>
       <% if column.name == 'name'  %>           
            <%= link_to row.send(column.name),:controller => controller, :action => show, :id => row if show  %>
       <% else %>
          <%=h row.send(column.name) %>
       <% end %>            
    </td>
  <% end %>
    <td><%= link_to (subject_icon('edit.png'))+" Edit",:controller => controller, :action => edit, :id => row if edit%></td>
  </tr>
<% end %>
</tbody>
<% end %>



