<% content_for :sidemenu do%>
  <%= render :partial => '/menu/admin_menu'%>
    <div>
    <span class='menu'>Data Concept</span>
<%= link_to (subject_icon('list.png')) +'List', :action => 'show',
                    :controller => 'data_contexts', :id => @data_concept.data_context %><
    </div>
<% end %>


<div class='main' id='maintitle'>
    <h2>
        <%=subject_icon('concept')%> New Concept
    </h2>
    <div class='data_entry_form'>
        <% if @data_concept.parent %>
          <p>Child of <b><%=@data_concept.parent.name %></b> in the context of <b><%=@data_concept.data_context.name%></b></p>
        <% else %>
            <% if @data_concept.data_context %>
              Root concept in context <%=@data_concept.data_context.name %>
            <% else %>
              No context
            <% end %>
        <% end %>
        
        <% form_tag :action => 'create', :id => @data_context do %>
          <%= render :partial => 'form' %>
          <!--% data_concept.data_context = @data_context %-->
          <%= submit_tag "Create"%>
       <% end %>
    </div>
</div>

