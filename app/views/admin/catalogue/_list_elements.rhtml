<h3 class='icon icon-data_element'><%=@data_concept.name %> <%=l(:Implementations) %></h3>
<p>
    <%=l(:text_context_intro) %> <%= link_to(l(:Data_Sources),{:controller=>'data_systems', :action => 'list'}) %>
</p>
<table class="report" width='100%'>
    <thead>
        <tr>
            <th>
                <%=l(:Name) %>
            </th>
            <th>
                <%=l(:Description) %>
            </th>
            <th>
                <%=l(:Style) %>
            </th>
            <th>
                <%=l(:Data_System) %>
            </th>
            <th>
                <%=l(:Methods) %>
            </th>
            <th>
                <%=l(:Assays) %>
            </th>
            <th>
                <%=l(:Actions) %>
            </th>
        </tr>
    </thead>
    <tbody>
        <% for row in @data_concept.elements %>
        <tr class="<%= cycle('odd', 'even') %> boldnotbold">
            <td>
                <%=link_to row.name ,:controller=>'data_elements',:action=>'show',:id=>row.id %>
            </td>
            <td>
                <%=row.description %>
            </td>
            <td>
                <%=row.style %>
            </td>
            <td>
                <%=row.name %>
            </td>
            <td>
                <%=row.parameters.size %>
            </td>
            <td>
                <%=row.assay_parameters.size %>
            </td>
            <td>
                <%= link_to_remote(l(:Delete),:url => { :action => 'remove_element' ,:id=> row.id}, :confirm => l(:text_are_you_sure),:method => "post" ) if row.not_used %>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>
<p class='icon icon-add'>
    <%= link_to_remote(l(:Add), :url => { :action => 'new_element' , :id=> @data_concept.id }) %>
</p>
