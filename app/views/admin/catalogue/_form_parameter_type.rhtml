
<!--fieldset-->
  <div class="row">
  <%= hidden_field 'parameter_type', 'data_type_id' %>
  <%= hidden_field 'parameter_type', 'data_concept_id' %>
    <%=l(:help_concept_usage)%>
    <div class="form-element">
      <label for="parameter_type_name">
        <%=l(:label_name)%>
      </label>
       <%= text_field 'parameter_type', 'name'  ,"size" => 10,:class=>"text-input" %>
    </div>
  </div>

  <div class="row">
    <div class="form-element">
      <label for="parameter_type_description">
        <%=l(:label_description)%>
      </label>
          <%= text_area( :parameter_type, :description,{:rows=>5, :cols=>80})%>
    </div>
  </div>

  <div class="row">
    <div class="form-element">
      <label for="parameter_type_weighing">
        <%=l(:label_weighting)%>
      </label>
        <%= text_field 'parameter_type', 'weighing' ,"size" => 8,:class=>"text-input"  %>
    </div>
  </div>

  <!--[eoform:parameter_type]-->
  
<!--/fieldset-->
