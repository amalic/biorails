<% content_for :sidemenu do %>
<%= render :partial => 'menu' %>
<% end %>
<% content_for :messages do -%>
<%=render :partial =>'shared/messages',:locals => { :objects => ['role']} %>
<%end %>
<% content_for :right do %>
<%= render :partial => 'help' %>
<% end %>
<%= render :partial => 'admin/header' %>

<h2 class='icon icon-role'>
  <%=l(:label_user) %>
  <%=l(:label_roles) %>
</h2>
<div class='panel'>
  <h3 class='icon icon-user'><%=l(:label_user_roles) %>
  </h3>
  <div class='panel'>
    <table class='report'>
      <tr>
        <th>
          <%=l(:label_name) %>
        </th>
        <th>
          <%=l(:label_description) %>
        </th>
        <th>
          <%=l(:label_created_at) %>
        </th>
        <th>
          <%=l(:label_updated_at) %>
        </th>
      </tr>
      <% for role in @user_roles %>
      <tr class="<%= cycle('odd', 'even') %>">
        <td>
          <%= link_to role.name, :action => 'show', :id => role %>
        </td>
        <td>
          <%= role.description %>
        </td>
        <td>
          <%=short_date role.created_at %>
        </td>
        <td>
          <%=short_date role.updated_at %>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
  <h3 class='icon icon-team'>
    <%=l(:label_team_roles) %>
    </h3>
  <div class='panel'>
    <table class='report'>
      <tr>
        <th>
          <%=l(:label_name) %>
        </th>
        <th>
          <%=l(:label_description) %>
        </th>
        <th>
          <%=l(:label_created_at) %>
        </th>
        <th>
          <%=l(:label_updated_at) %>
        </th>
      </tr>
      <% for role in @project_roles %>
      <tr class="<%= cycle('odd', 'even') %>">
        <td>
          <%= link_to role.name, :action => 'show', :id => role %>
        </td>
        <td>
          <%= role.description %>
        </td>
        <td>
          <%=short_date role.created_at %>
        </td>
        <td>
          <%=short_date role.updated_at %>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
<hr />
  <%= link_to l(:label_new),role_url( :action => 'new'), :class=>'icon icon-new' %>
  <%if @role && !@role.new_record?%>
    <%= link_to l(:label_edit), role_url( :action => 'edit',:id=>@role.id), :class => 'icon icon-edit'%>
  <%end%>
</div>