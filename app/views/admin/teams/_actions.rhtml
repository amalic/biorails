<div>
  <span class='menu'>
    <b class='icon icon-team'>
      <%=l(:label_teams)%>
    </b>
  </span>
    <%= link_to l(:label_list), team_url(:action => 'list') %>
    <% if @team %>
      <%= link_to l(:label_show), team_url( :action => 'show', :id => @team)%>
      <%= link_to l(:label_edit), team_url( :action => 'edit', :id => @team) %>
      <%  unless @team.in_use?  %>
        <%= link_to( l(:label_delete)+"[#{@team.name}]", team_url({ :action => 'destroy', :id => @team }), :confirm => l(:text_are_you_sure),:method => "post")  %>
      <% end %>
    <% else %>  
    <%= link_to( l(:label_new),   team_url(:action => 'new')) %>
    <% end %>
</div>
