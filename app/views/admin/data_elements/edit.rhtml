<% content_for :sidemenu do%>
  <%= render :partial => '/menu/admin_menu'%>
    <div>
    <span class='menu'>Data Elements</span>
     <%= link_to (subject_icon('show.png')) + 'Show', :action => 'show', :id => @data_element %>
     <%= link_to (subject_icon('list.png')) + 'List', :action => 'list' %>
    </div>
<% end %>


<div class='main'>

    <h2>
        <%=subject_icon('data_element')%> Editing Data Element [<strong><%=@data_element.name%></strong>]
    </h2>

    <% form_tag :action => 'update', :id => @data_element do %>
        
    <div class='dialog'>
        
        <div class="row">
          <strong>System:</strong>  <%= @data_element.system.name %><br/>
          <strong>Concept:</strong>  <%= @data_element.concept.name %>
        
        </div>
        <div class="row">
            <div class="form-element">
                  <label for="data_element_name">Name</label>
                  <%= text_field :data_element, :name,{:class=>"text-input"}  %>
            </div>
        </div>
        <div class="row">       
            <div class="form-element">
                  <label for="data_element_estimated_count">Estimated No. Values</label>
                  <%= text_field :data_element, :estimated_count ,{:size => 7, :class=>"text-input"}%>
            </div>
        </div>
        
        <div class="row">
            <div class="form-element">
            
              <label for="data_element_description">Description</label>
              <%= text_area( 'data_element', 'description',{:rows=>5, :cols=>100} )%>
            </div>
        </div>

      <div class="row">
         <%= render :partial => 'values' %>
      </div>

     <div class="row">
        <%= submit_tag 'Save' %>
     </div>

   </div>
  <% end %>
 
</div>