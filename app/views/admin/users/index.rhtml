<% content_for :left do%>
  <%= render :partial => '/menu/admin_menu'%>
<% end %>

<h2>Users</h2>

<table>
  <tr><th>Name</th><th>Full Name</th><th>Email Address</th><th>Role</th>
<% for user in @users %>
  <tr>
    <td><%= link_to user.name, :action => 'show', :id => user.id %></td>
    <td><%= user.login %></td>
    <td><%= user.fullname %></td>
    <td><%= user.created_at %></td>
    <td><%= user.updated_at %></td>
    <td><%= user.email %></td>
  </tr>
<% end -%>
</table>

<hr/>
<p><%= link_to 'New User', :action => 'new' %></p>
