<h2>
  <%=l(:label_permissions)%>
</h2>

<table>
<% for permission in @permissions -%>
  <tr>
    <td><%= link_to permission.name, :action => 'show',
            :id => permission.id %></td>
  </tr>
<% end -%>
</table>

<hr/>
<p>
  <%= link_to l(:label_new_permission)+"</b>", :action => 'new', :class=>'icon icon-permission' %>
</p>

