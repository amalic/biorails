<% content_for :sidemenu do%>
  <%= render :partial => 'menu'%>
<% end %>

<% content_for :right do%>
  <%= render :partial => 'help'%>
<% end %>

<div class='panel'>
<h1 class="icon icon-data_type">Listing Data Types</h1>
<table class="report">
  <tr>
    <th>name</th>
    <th>Description</th>
    <th>Action</th>
  </tr>
  
	<% for data_type in @data_types %>
	  <tr>
	    <td><%= link_to data_type.name,data_type_url( :action => 'show', :id => data_type) %></td>
	    <td><%=h data_type.description%></td>
	    <td><%= link_to '<b class="icon icon-edit"></b>edit',data_type_url( :action => 'edit', :id => data_type) %></td>
	  </tr>
	<% end %>
</table>

       <%= will_paginate @data_types %>    
</div>