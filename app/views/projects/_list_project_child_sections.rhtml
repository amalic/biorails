<div class='box'>
  <strong class='icon icon-project-section'><%=l(:label_sections)%></strong>
  <dl>
    <% for item in @project.children_of_type(8,6) %>
      <dt><%= link_to item.name, project_url( :action => 'show', :id => item) %>
        </dt>
      <dd><%= item.description %>
        </dd>
     <% end %>
  </dl>
  <hr/>
  <%= link_to_if allows?(:data,:create), l(:label_sections), project_url(:action => 'new', :type=>6), :class=>'icon icon-new'%>
</div>
