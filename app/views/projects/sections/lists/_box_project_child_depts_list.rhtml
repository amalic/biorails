<div class="box">
  <strong class='icon icon-project-dept'><%=l(:Depts)%></strong>
  <dl>
    <% for item in @project.children_of_type(8,4) %>
      <dt><%= link_to item.name, project_url( :action => 'show', :id => item) %>
      </dt>
      <dd><%= item.description %>
      </dd>
    <% end %>
  </dl>
  <hr/>
  <%= link_to_if right?(:data,:create), l(:Dept), new_project_url(ProjectType::ORGANIZATION), :class=>'icon icon-new' if current_project.changeable? %>
</div>