<div class="box">
  <strong class='icon icon-project-assaygroup'><%=l(:Assay_Groups)%></strong>
  <dl>
    <% for item in @project.children_of_type(8,2) %>
      <dt><%= link_to item.name, project_url( :action => 'show', :id => item) %>
      </dt>
      <dd><%= item.description %>
      </dd>
    <% end %>
  </dl>
  <hr/>
  <%= link_to_if right?(:data,:create), l(:Assay_Group), project_url(ProjectType::ASSAY_GROUP), :class=>'icon icon-new' if current_project.changeable? %>
</div>