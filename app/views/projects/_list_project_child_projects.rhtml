<div class='box'>
  <strong class='icon icon-project-project'><%=l(:label_discovery_projects)%></strong>
    <dl>
    <% for item in @project.children_of_type(8,1) %>
      <dt><%= link_to item.name, project_url( :action => 'show', :id => item) %>
        </dt>
      <dd><%= item.description %>
        </dd>
     <% end %>
  </dl>
  <hr/>
  <%= link_to_if allows?(:data,:create), l(:label_discovery_project), project_url(:action => 'new', :type=>1), :class=>'icon icon-new'%>
</div>
