<div class="box">
  <b><%=link_to l(:label_my_latest,5,l(:label_tasks)), task_url(:action => 'list'), :class=>'icon icon-task' %></b>
    <p><strong class="icon icon-red"><%=l(:label_overdue) %>
    </strong></p>
    <dl>
      <% for item in @user.tasks.overdue(5) %>
        <dt><%= link_to item.path, task_url( :action => 'show', :id => item), :class=>"icon icon-status_#{item.status}" %>
          </dt>
      <% end %>
    </dl>
    <p><strong class="icon icon-green"><%=l(:label_current) %>
    </strong></p>
    <dl>
      <% for item in @user.tasks.current(5) %>
        <dt><%= link_to item.path, task_url( :action => 'show', :id => item), :class=>"icon icon-status_#{item.status}" %>
          </dt>
      <% end %>
    </dl>
    <p><strong class="icon icon-amber"><%=l(:label_coming) %>
    </strong></p>
    <dl>
      <% for item in @user.tasks.future(5) %>
        <dt><%= link_to item.path, task_url( :action => 'show', :id => item),:class=>"icon icon-status_#{item.status}" %>
          </dt>
      <% end %>
    </dl>
</div>
