<% content_for :centre do -%>

<h2>
   <%=subject_icon('experiment.png')%> Experiment [<strong><%=@experiment.name %></strong>] in study 
        [<%= link_to @experiment.study.name, study_url( :action => 'show', :id => @experiment.study.id)  %>]
</h2>

<div class='panel'>
    <table class="report">
      <tr><th class="label"><%=subject_icon('name.png')%> Name</th><td> <%= @experiment.name %></td></tr>
      <tr><th class="label"><%=subject_icon('description.png')%> Description</th><td> <%= @experiment.description %></td></tr>
      <tr><th class="label"><%=subject_icon('study.png')%> Study</th><td><%= link_to @experiment.study.name, study_url( :action => 'show', :id => @experiment.study)  %></td></tr>
      <tr><th class="label"><%=subject_icon('process.png')%> Process [Default]</th><td> <%= @experiment.process.path %></td></tr>
    </table>
    <div id="tab-parameters">                                       
            <%= render :partial => 'schedule' %>  
    </div>  
</div>

<%= render :partial => 'shared/audit',:locals =>{ :item => @experiment} %>
<%end%>

<% content_for :right do -%>
 <div>
  <div class='panel' id='folder_actions'>
    <%= render :partial => '/project/folders/selector',:locals=>{:folder=> @project_folder} %>   
  </div>
</div>
<% end %>
 
