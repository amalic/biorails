<% content_for :center do -%>
<div id='tabs-folders'>
    <div id="tab-show" class="tab-content">
        <%= render :partial => 'document', :locals=>{:folder=>@project_folder} %>
    </div>
    <div id="tab-folders" class="tab-content x-hidden">
    </div>
</div>    
  
<% end %>    

<% content_for :help do -%>
    <%= render :partial => 'help' %>   
<% end %>
<% content_for :status do -%>
    <%= render :partial => 'status' %>   
<% end %>




<SCRIPT TYPE="text/javascript"> 
