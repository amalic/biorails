		        renderTo:'tabs-folders',
				activeTab: 0,
                frame: true,
                deferredRender: true,
                items: [ {
						title: 'Document View',
						contentEl: 'tab-show',
                        layout: 'fit'            
					    } , folder
                    ]		  
		});
