<% content_for :messages do -%>
  <%= render :partial => 'shared/messages', :locals => { :objects => ['project','project_folder','project_element','project_content']}  %>
<% end -%>

<h1>Editing Folder</h1>

<% form_tag :action => 'update', :id => @project_folder do %>
  <%= render :partial => 'form' %>
  <%= submit_tag 'Edit' %>
<% end %>

<%= link_to 'Show', :action => 'show', :id => @project_folder %> |
<%= link_to 'Back', :action => 'list' %>
