<h2><%= @project.name%></h2>
<%= @project.summary%>

<div class="splitcontentleft">
  <div class="box">
	<h3><%=l(:label_news_latest)%></h3>
		<%= render :partial => 'news/news', :collection => @news if @news %>
	</div>
</div>

<div class="splitcontentright">
	<div class="box">
	<h3 class="icon icon-request"><%=l(:label_lastest_requests)%></h3>
		<ul>
		<% for item in @project.lastest(Request,5) %>
			<li>
			<%= link_to item.name, request_url( :action => 'show', :id => item) %> (<%= format_time(item.updated_at) %>)<br />
			<%=h item.description %>
			</li>
		<% end %>
		</ul>
	</div>  
</div>	

