<div class="content_header inventory">
    <h1 class='icon icon-compound' style='text-indent:0.5em'><%= link_to( l(:Compounds), compound_url( :action => 'list')) %>
    </h1>
    <br/>
    <br/>
    <div class='actions_right'>
        <%= link_to( "<b class='icon icon-new'>"+ l(:New) +"</b>", :action => 'new') unless @compound %>
        <%= link_to("<b class='icon icon-edit'>"+ l(:Edit) +"</b>",:action => 'edit',:id=>@compound.id) if @compound and !@compound.new_record?  %>
        <%= link_to "<b class='icon icon-list'>"+ l(:List) +"</b>",:action => 'list' %>
    </div>
	<br />
</div>
