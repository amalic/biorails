    <td><label></label></td>		
  </tr>
  <tr>
    <td colspan=4></td>
  </tr>
  <tr>
    <th><b><label>Description:</label></b></th>
    <td colspan=3><label><%= @compound.description %></label></td>
  </tr>           
  <tr>
    <th><b><label>Trade Name</label></b></th>
    <td colspan=3><label><%= @compound.trade_name %></label></td>
  </tr>
  <tr>
