<%= hidden_field 'project_element', 'id' %>
<%= hidden_field 'project_element', 'project_id' %>
<%= hidden_field 'project_element', 'element_type_id' %>
<%= hidden_field_tag 'style', 'html' %>
<div class="row">
    <div class="form-element">
        <label for="name">
            <%=l(:label_name_ref) %>
        </label>
        <%= text_field :project_element, :name , {:size=>20, :class=>"text-input"} %>
    </div>
</div>
<div class="row">
    <div class="form-element">
        <label for="title">
            <%=l(:label_title_heading) %>
        </label>
        <%= text_field :project_element, :title , {:size=>80, :class=>"text-input"} %>
    </div>
</div>
<div class="row">
    <%= html_field :project_element, :content_data %>
</div>
<br/>
<div class="row">
    <%= submit_tag l(:button_save) %>
</div>
