<% dialog "<h1 class='icon icon-file-large' style='text-indent:0.5em'>
    Upload file into folder: #{link_to "/"+ @project_folder.path,
    folder_url( :action => 'show',:id=>@project_folder)}</h1>" do %>

  <% form_for(:project_element , :url=>asset_url(:action=>'create',:id=>@project_folder.id),
                  :html => { :multipart => true }) do |f| -%>
    <%= hidden_field 'project_asset', 'path'  %>
    <%= hidden_field 'project_asset', 'project_id'  %>
    <%= hidden_field 'project_asset', 'id'  %>
    <%= hidden_field 'project_asset', 'position'  %>

<div class="row">
  <div class="form-element">
    <label for="name">
      Name (Ref)
    </label>
    <%= f.text_field  'name' , {:size=>20, :class=>"text-input"} %>
  </div>
</div>

<div class="row">
  <div class="form-element">
    <label for="title" >
      Title (heading)
    </label>
    <%= f.text_field  'title' , {:size=>80, :class=>"text-input"} %>
  </div>
</div>

 <div class="row">
    <div class="form-element">
      <label for="project_asset_file" class='icon icon-file'>
        Name of File asset to upload
      </label>
      <%= f.select :file, :size=>80 %>
   </div>
</div>
 <div class="row">
      <%= submit_tag "Save" %>
 </div>
  <% end -%>
<% end -%>

