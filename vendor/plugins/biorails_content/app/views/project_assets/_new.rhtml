<%= render :partial => 'header' %>
<% dialog l(:label_file_upload) do %>
<% form_for(:project_element , :url=>asset_url(:action=>'create',:id=>@project_folder.id),
:html => { :multipart => true }) do |f| -%>
<%= hidden_field 'project_asset', 'path' %>
<%= hidden_field 'project_asset', 'project_id' %>
<%= hidden_field 'project_asset', 'id' %>
<%= hidden_field 'project_asset', 'position' %>
<div class="row">
    <div class="form-element">
        <label for="name">
            <%=l(:label_name_ref) %>
        </label>
        <%= f.text_field  'name' , {:size=>20, :class=>"text-input"} %>
    </div>
</div>
<div class="row">
    <div class="form-element">
        <label for="title">
            <%=l(:label_title_heading) %>
        </label>
        <%= f.text_field  'title' , {:size=>80, :class=>"text-input"} %>
    </div>
</div>
<div class="row">
    <div class="form-element">
        <label for="project_asset_file">
            <%=l(:label_pathname_to_file) %>
        </label>
        <%= f.file_field :file, :size=>80 %>
    </div>
</div>
<div class="row">
    <%= submit_tag l(:button_save) %>
</div>
<% end -%>
<% end -%>
