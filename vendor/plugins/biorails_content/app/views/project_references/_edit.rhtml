<h1>
  Element Path:
  <%= link_to "/"+@project_element.parent.path,
      folder_url( :action => 'show',:id=> @project_element.parent_id) if  @project_element.parent%>
  <%= "/"+ @project_element.name %>
</h1>

<% form_for(:project_element , :url=>asset_url(:action=>'update',:id=>@project_element)) do |f| -%>

   <%= hidden_field 'project_element', 'path'  %>
   <%= hidden_field 'project_element', 'project_id'  %>
   <%= hidden_field 'project_element', 'id'  %>
   <%= hidden_field 'project_element', 'position'  %>

  <div class="row">

    <div class="form-element">
       <label for="project_element_name" class='icon icon-name'>
         Name (Ref)
       </label>
       <%= f.text_field 'name' , {:size=>20, :class=>"text-input"} %>
    </div>

    <div class="form-element">
      <label for="project_element_name" class='icon icon-description'>
        Title (Heading)
      </label>
      <%= f.text_field  'title' , {:size=>80, :class=>"text-input"} %>
    </div>
  </div>

  <div class="row">
    <%= submit_tag "Save" %>
  </div>

<% end -%>

<%if @project_element.image? %>
<%= @project_element.image_tag  %>
<%end %>

