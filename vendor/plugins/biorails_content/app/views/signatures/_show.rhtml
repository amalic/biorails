
<%= render :partial => 'header'%>
<div class='panel'>
<table class='report'>
<%old_status = ""%>
<%for signature in @signatures%>
<%if old_status !=signature.signature_state%>  
  <tr>
    <td colspan='6'><h3><%=l(:label_for_status)%> <%=signature.signature_state %></h3></td>
  </tr>
  <tr>
    <th>
      <%=l(:label_version)%>
    </th>
    <th>
      <%=l(:label_role)%>
    </th>
    <th>
      <%=l(:label_signature)%>
    </th>
    <th>
      <%=l(:label_date)%>
    </th>
    <th>
      <%=l(:label_verify)%>
    </th>
  </tr>
<% old_status =signature.signature_state %>
<%end%>
<tr>
  <td><%=  link_to "Version #{version_no(signature.filename)}", signature.file_url %></td>
  <td><%=signature.signature_role%></td>
  <td><%= signature.signer.name %></td>
  <td><%= short_date(signature.signed_date) %></td>
<td>
<%if signature == @signature %>
    <%= ( @status ? "Passed" :"Failed")%>
<%else%>
  <%= link_to 'test?', :action=>'show', :id=>@project_folder.id , :signature_id=>signature.id %>
<%end%>
</td>
</tr>
<%end%>
</table>
</div>
