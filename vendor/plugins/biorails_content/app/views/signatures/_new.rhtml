<% dialog "Sign Folder #{@signature.path}" do %>
<%= render :partial=>'current_signatures' %>
<div class='box'>
    <% form_for(:signature , :url=>signature_url(:action=>'sign',:id=>@signature.project_element_id)) do |f| -%>
    <%= f.hidden_field :project_element_id %>
    <%= f.hidden_field :filename %>
    <%= f.hidden_field :signature_state %>
    <%= f.hidden_field :user_id %>
    <%= f.hidden_field :created_by_user_id %>
    <b><%= @signature.asserted_text %></b>
    <embed src="<%= @signature.file_url %>" width="99%" height="650" type="application/pdf">
    </embed>
    <div class="row">
        <div class="form-element">
            <label for="Password">
                Confirm password for <%= current_user.login %>
            </label>
            <%= password_field_tag :password, nil %>
        </div>
        <div class="form-element">
            <label for="comments">
                Comment
            </label>
            <%= f.text_area  'comments' , {:rows=>2, :class=>"text-input"} %>
        </div>
        <div class="form-element">
            <label for="comments">
                Get this witnessed by
            </label>
            <%= select_tag 'witness', options_for_select(
            @signature.allowed_witness_list.collect{|item|[item.name,item.id]},
            SystemSetting.default_witness) %>
        </div>
    </div>
    <div class="row">
        <%= submit_tag "Sign" , :name=>'submit' %>
        <%= submit_tag "Cancel", :name=>'submit' %>
    </div>
    <% end %>
</div>

<% end %>
