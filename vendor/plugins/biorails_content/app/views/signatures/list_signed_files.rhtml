<%= flash[:notice] %>
<% unless flash[:notice] %>
<div class="box">
  <table id="project_documents" class="report">
    <thead>
      <tr class='header'>
        <th><b class='icon icon-note'>Documents</b></th>
        <th><b class='icon icon-date'>Date</b></th>
        <th><b class='icon icon-sign'>Authored by</b></th>
      </tr>
    </thead>
    <tbody>
      <% @project.elements.each do |element| %>
        <% element.signatures.find(:all, :conditions=>{:signature_role=>'AUTHOR'}, :order=>'created_at desc').each do |sig| %>
        <tr>
          <td><%= element.name %> Version <%= version_no(sig.filename) %></td>
          <td><%= short_date(sig.created_at) %></td>
          <td><%= sig.signer.name %></td>
          <td><ul><li><%=  docpath(sig.filename) %></li>
            <li><%= link_to 'show zip', zippath(sig.filename) %></li>
            <li><%= link_to 'show signatures', :controller=>"signatures", :action=>"show_related", :id=>sig.id %></li></ul>
          </td>
        </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
<% end %>
